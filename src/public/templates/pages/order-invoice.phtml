<div data-role="content">
    <div class="nav-header"></div>
    <div data-role="popup" data-overlay-theme="b" data-theme="b" data-position-to="window" id="success-popup" class="ui-content">
         <h3><%= t.paymentSuccessfull %></h3>
    </div>
    <div data-role="popup" data-position-to="window" id="add-coupon-popup" data-overlay-theme="b" data-theme="b">
         <div data-role="header">
            <h1><%= t.addCoupon %></h1>
        </div>
        <div role="main" class="ui-content">
            <label for="coupon-code"><%= t.code %></label>
            <input type="text" id="coupon-code" />

            <a class="ui-btn ui-corner-all ui-shadow ui-btn-b" data-rel="back"><%= t.abort %></a>
            <a id='coupon-code-verify' class="ui-btn ui-corner-all ui-shadow ui-btn-b"><%= t.verify %></a>
        </div>
    </div>
    <div data-role="popup" data-position-to="window" id="select-customer-popup" data-overlay-theme="b" data-theme="b">
         <div data-role="header">
            <h1><%= t.selectCustomer %></h1>
        </div>
        <div role="main" class="ui-content">
            <label for="customer-search-name"><%= t.name %>:</label>
            <input type="text" id="customer-search-name" />

            <ul data-role="listview" data-inset="true" id="customer-search-result"></ul>

            <a id='customer-search' class="ui-btn ui-corner-all ui-shadow ui-btn-b"><%= t.search %></a>
            <a id='customer-add' class="ui-btn ui-corner-all ui-shadow ui-btn-b"><%= t.createPlant %></a>
            <a class="ui-btn ui-corner-all ui-shadow ui-btn-b" data-rel="back"><%= t.abort %></a>
        </div>
    </div>
    <div data-role="popup" data-position-to="window" id="add-customer-popup" data-overlay-theme="b" data-theme="b">
        <div data-role="header">
            <h1><%= t.createCustomer %></h1>
        </div>
        <div role="main" class="ui-content">
            <form id="customer-form">
                <div data-role="fieldcontain">
                    <label for="customer-title"><%= t.title %>:</label>
                    <select id="customer-title" name="title" data-mini="true">
                        <option value="" disabled="disabled" selected="">Ausw√§hlen</option>
                        <option><%= t.mr %></option>
                        <option><%= t.ms %></option>
                        <option><%= t.company %></option>
                    </select>
                </div>
                <div data-role="fieldcontain">
                    <label for="customer-name"><%= t.name %>:</label>
                    <input type="text" id="customer-name" name="name" data-mini="true"/>
                </div>
                <div data-role="fieldcontain">
                    <label for="customer-contact-person"><%= t.contactPerson %>:</label>
                    <input type="text" id="customer-contact-person" name="contact_person" data-mini="true"/>
                </div>
                <div data-role="fieldcontain">
                    <label for="customer-address"><%= t.address %>:</label>
                    <input type="text" id="customer-address" name="address" data-mini="true"/>
                </div>
                <div data-role="fieldcontain">
                    <label for="customer-address2"><%= t.address2 %>:</label>
                    <input type="text" id="customer-address2" name="address2" data-mini="true"/>
                </div>
                <div data-role="fieldcontain">
                    <label for="customer-city"><%= t.city %>:</label>
                    <input type="text" id="customer-city" name="city" data-mini="true"/>
                </div>
                <div data-role="fieldcontain">
                    <label for="customer-zip"><%= t.zip %>:</label>
                    <input type="text" id="customer-zip" name="zip" data-mini="true"/>
                </div>
                <div data-role="fieldcontain">
                    <label for="customer-tin"><%= t.tin %>:</label>
                    <input type="text" id="customer-tin" name="tin" data-mini="true"/>
                </div>
                <div data-role="fieldcontain">
                    <label for="customer-telephone"><%= t.telephone %>:</label>
                    <input type="text" id="customer-telephone" name="telephone" data-mini="true"/>
                </div>
                <div data-role="fieldcontain">
                    <label for="customer-fax"><%= t.fax %>:</label>
                    <input type="text" id="customer-fax" name="fax" data-mini="true"/>
                </div>
                <div data-role="fieldcontain">
                    <label for="customer-email"><%= t.email %>:</label>
                    <input type="text" id="customer-email" name="email" data-mini="true"/>
                </div>

                <a id="customer-save" class="ui-btn ui-corner-all ui-shadow ui-btn-b"><%= t.save %></a>
                <a class="ui-btn ui-corner-all ui-shadow ui-btn-b" ><%= t.abort %></a>
            </form>
        </div>
    </div>
    <div data-role="navbar">
        <ul>
            <li><a id="show-all" class="ui-btn-active ui-mini"><%= t.openOnTable %></a></li>
            <li><a id="show-single" class="ui-mini"><%= t.openOffOrder %></a></li>
        </ul>
    </div>
    <div>
        <a class="ui-btn ui-mini" id='button-all'><%= t.payAll %></a>
    </div>
    <div>
        <ul data-role="listview" data-inset="true" id="open-orders-list"></ul>
    </div>
    <div>
        <h3 class="ui-bar ui-bar-a ui-corner-all"><%= t.sumForInvoice %></h3>
        <div class="ui-body ui-body-a ui-corner-all">
            <h1 style="margin: 0; padding: 0" id="invoice-price">0.00 <%= i18n.currency %></h1>
            <div id="invoice-price-without-coupon"></div>
        </div>
    </div>
    <div class="ui-body ui-body-a ui-corner-all">
        <form>
            <fieldset data-role="controlgroup" data-mini="true">
                <input type="checkbox" name="continue" id="continue" checked="true">
                <label for="continue"><%= t.stayOnPage %></label>
            </fieldset>
            <div data-role="collapsible" data-inset="false" data-mini="true" data-collapsed-icon="carat-d" data-expanded-icon="carat-u">
                <h4><%= t.moreOptions %></h4>
                <fieldset data-role="controlgroup" data-mini="true">
                    <input type="button" id="use-coupon" value="<%= t.addCoupon %>">
                    <ul data-role="listview" data-inset="true" id="coupons-list"></ul>
                </fieldset>
                <fieldset data-role="controlgroup" data-mini="true">
                    <input type="checkbox" name="print" id="print">
                    <label for="print" id="print-receipt-text"><%= t.printReceipt %></label>
                    <select name="checkbox-printer" id="printer">
                        <% printers.each(function(printer){ %>
                            <option value="<%- printer.get('EventPrinterid') %>"><%= t.printer %>: <%- printer.get('Name') %></option>
                        <% }) %>
                    </select>
                </fieldset>
                <fieldset data-role="controlgroup" data-mini="true">
                    <select name="checkbox-printer" id="paymentTypeList">
                        <% paymentTypes.each(function(paymenType){ %>
                            <option value="<%- paymenType.get('PaymentTypeid') %>"><%= t.payType %>: <%- t[paymenType.get('Name')] %></option>
                        <% }) %>
                    </select>
                </fieldset>
                <fieldset data-role="controlgroup" data-mini="true">
                    <input type="button" id="use-customer" value="<%= t.selectCustomer%>">
                    <div id="selected-customer-display" style="text-align: center"></div>
                </fieldset>
            </div>
            <input type="button" id="submit" value="<%= t.create %>">
        </form>
    </div>
</div>