 <div data-role="content">
    <div>
        <fieldset id="status" data-role="controlgroup" data-type="horizontal" data-mini="true">
            <legend><%= t.orderStatus %>:</legend>
            <input type="radio" name="status" id="all" value="all">
            <label for="all"><%= t.all %></label>
            <input type="radio" name="status" id="completed" value="completed">
            <label for="completed"><%= t.completed %></label>
            <input type="radio" name="status" id="open" value="open">
            <label for="open"><%= t.open %></label>
        </fieldset>

        <label for="orderid"><%= t.orderid %>:</label>
        <input type="number" id="orderid" data-mini="true" />

        <label for="tableNr"><%= t.tableNr %>:</label>
        <input type="search" id="tableNr" data-mini="true" />

        <fieldset data-role="controlgroup" data-type="vertical" data-mini="true">
            <legend><%= t.orderPeriod %>:</legend>
            <label for="from"><%= t.from %></label>
            <input class="form-control" id="from" type="text" data-role="datebox" data-datebox-mode="timeflipbox" data-options='{"useFocus":true,"overrideSetTimeButtonLabel":"<%= t.setTime %>"}'/>
            <label for="to"><%= t.to %></label>
            <input class="form-control" id="to" type="text" data-role="datebox"  data-datebox-mode="timeflipbox" data-options='{"useFocus":true,"overrideSetTimeButtonLabel":"<%= t.setTime %>"}'/>
        </fieldset>

        <label for="userid"><%= t.waiter %>:</label>
        <select id="userid" data-mini="true">
            <option value="*"><%= t.all %></option>
            <% userList.each(function(user) { %>
                <option value="<%- user.get('Userid') %>"><%- user.get('Firstname') %> <%- user.get('Lastname') %></option>
            <% }) %>
        </select>
    </div>
</div>
<div data-role="footer" data-theme="b" data-position="fixed" >
    <a id="back" class="ui-btn ui-corner-all ui-btn-inline ui-mini ui-btn-icon-left ui-icon-carat-l"><%= t.back %></a>
    <a id="search" class="ui-btn ui-corner-all ui-btn-inline ui-mini ui-btn-icon-right ui-icon-search" style="float:right"><%= t.search %></a>
</div>