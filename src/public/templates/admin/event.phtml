<div data-role="content">
    <div class="nav-header"></div>
    <a class="add-btn ui-btn ui-icon-plus ui-mini ui-btn-icon-left">Hinzuf√ºgen</a>
    <table data-role="table" id="table" class="ui-responsive table-stroke table-stripe">
        <thead>
            <tr>
                <th>Name</th>
                <th>Datum</th>
                <th>Aktiv</th>
                <th>Optionen</th>
            </tr>
        </thead>
        <tbody>
            <% events.each(function(event){ %>
                <tr>
                    <th><%- event.get('Name') %></th>
                    <td><%- app.i18n.toDate(event.get('Date')) %></td>
                    <td><% if(event.get('Active') == 1) { print('Ja'); } else { print('Nein'); } %></td>
                    <td>
                        <a data-event-cid="<%- event.cid %>" class="copy-btn ui-btn ui-icon-files-o ui-mini ui-btn-icon-left">Kopieren</a>
                        <a data-event-cid="<%- event.cid %>" class="edit-settings-btn ui-btn ui-icon-edit ui-mini ui-btn-icon-left">Einstellungen Bearbeiten</a>
                        <a data-event-cid="<%- event.cid %>" class="edit-details-btn ui-btn ui-icon-edit ui-mini ui-btn-icon-left">Details Bearbeiten</a>
                        <a data-event-cid="<%- event.cid %>" class="active-btn ui-btn ui-icon-star ui-mini ui-btn-icon-left">Aktiv setzen</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
<div data-role="popup" id="activate-dialog" data-overlay-theme="b" data-theme="b" data-dismissible="false" style="max-width:400px;">
    <div data-role="header" data-theme="a">
        <h1>Event aktivieren?</h1>
    </div>
    <div role="main" class="ui-content">
        <h3 class="ui-title">Sind Sie sicher, dass Sie dieses Event aktivieren wollen?</h3>
        <a class="ui-btn ui-corner-all ui-shadow ui-btn-b" data-rel="back">Abbrechen</a>
        <a id='activate-dialog-finished' class="ui-btn ui-corner-all ui-shadow ui-btn-b">Fortfahren</a>
    </div>
</div>